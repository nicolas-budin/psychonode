<!DOCTYPE html>
<html>
<head>

    <%- include('../header'); %>

</head>
<body>

<%- include('navbar'); %>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/users">Users</a></li>
        <li class="breadcrumb-item"><a href="/users/<%= userId %>"><%= userId %></a></li>
        <li class="breadcrumb-item active" aria-current="page">tests</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        Tests
    </div>
    <div class="card-body">

        <form method="post">

            <input type="hidden" id="user_id" name="user_id" value="<%= userId %>">

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Step</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>

                <% tests.forEach(function(entry, index) { %>


                    <tr>

                        <td>
                            <a href="/users/<%= userId %>/tests/<%= entry.id %>"><%= entry.is_first_step ? "First" : "Second" %></a>
                        </td>

                        <td>

                            <% if (!entry.is_completed && !entry.is_aborted) { %>
                                Ongoing
                            <% } %>

                            <% if (!entry.is_completed && entry.is_aborted) { %>
                                Aborted
                            <% } %>

                            <% if (entry.is_completed) { %>
                                Done
                            <% } %>
                        </td>

                        <td>

                            <% if (index == 0) { %>

                                <% if (entry.is_completed) { %>

                                    <% if (entry.is_first_step) { %>

                                        <% if (!entry.children_id) { %>

                                            <button type="submit" formaction="/tests/admin/<%= entry.id %>/next"
                                                    class="btn btn-primary">
                                                Start Next Step
                                            </button>

                                        <% } %>

                                    <% } %>

                                    <% if (!entry.is_first_step) { %>

                                        <button type="submit" formaction="/tests/admin/<%= entry.id %>/new"
                                                class="btn btn-primary">
                                            Start New Test
                                        </button>

                                    <% } %>

                                <% } %>

                                <% if (!entry.is_completed) { %>

                                    <% if (!entry.is_aborted ) { %>

                                        <button type="submit" formaction="/tests/admin/<%= entry.id %>/abort"
                                                class="btn btn-danger">
                                            Abort Test
                                        </button>

                                    <% } %>


                                    <% if (entry.is_aborted ) { %>

                                        <button type="submit" formaction="/tests/admin/<%= entry.id %>/new"
                                                class="btn btn-primary">
                                            Start New Test
                                        </button>

                                    <% } %>

                                <% } %>

                            <% } %>

                        </td>
                    </tr>

                <% }) %>

                </tbody>


            </table>

        </form>
    </div>
</div>
</body>
</html>
