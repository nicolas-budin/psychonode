<!DOCTYPE html>
<html>
<head>

    <%- include('../header'); %>

</head>
<body>

<%- include('navbar'); %>


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/users">Users</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= user.id %></li>
    </ol>
</nav>

<div class="card">

    <div class="card-header">
        User Data
    </div>
    <div class="card-body">

        <form action="/users/admin/save" method="post" autocomplete="off">

            <% if (user.id != undefined && user.id > 0) { %>

                <div class="form-group">
                    <label for="id" class="col-form-label">ID</label>
                    <input type="text" readonly class="form-control" id="id" name="id"
                           value="<%= user.id %>">
                </div>

            <% } %>

            <div class="form-group">
                <br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="is_active" id="is_active"
                           value="is_active" <%- user.is_active ? 'checked' : '' %>>
                    <label class="form-check-label" for="is_active">Enabled</label>
                </div>

            </div>

            <div class="form-group">
                <br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="is_control" id="is_control"
                           value="is_control" <%- user.is_control ? 'checked' : '' %>>
                    <label class="form-check-label" for="is_control">In control group</label>
                </div>

            </div>

            <div class="form-group">
                <label for="login" class="col-form-label">Login</label>
                <input type="text" class="form-control" id="login" name="login" value="<%= user.login %>">
            </div>

            <div class="form-group">
                <label for="age" class="col-form-label">Age</label>
                <input type="text" class="form-control" id="age" name="age" value="<%= user.age %>">
            </div>

            <div class="form-group">
                <label for="sex" class="col-form-label">Sex</label>

                <br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="sex" id="inlineSexRadio2"
                           value="f" <%- user.sex == 'f' ? 'checked' : '' %>>
                    <label class="form-check-label" for="inlineRadio2">Female</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="sex" id="inlineSexRadio1"
                           value="m" <%- user.sex == 'm' ? 'checked' : '' %>>
                    <label class="form-check-label" for="inlineRadio1">Male</label>
                </div>

            </div>

            <div class="form-group">
                <label for="level" class="col-form-label">Level (entered by student)</label>
                <input type="text" class="form-control" id="level" name="level" value="<%= user.level %>">
            </div>


                <div class="form-group">
                    <label for="degree" class="col-form-label">School degree (vg / vp / college)</label>
                    <input type="text" class="form-control" id="degree" name="degree" value="<%= user.degree %>">
                </div>

                <div class="form-group">
                    <label for="grade" class="col-form-label">School grade (number)</label>
                    <input type="text" class="form-control" id="grade" name="grade" value="<%= user.grade %>">
                </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>

    </div>
</div>

</body>
</html>
