<!DOCTYPE html>
<html>
<head>

    <%- include('../../header'); %>

</head>
<body>

<div class="alert alert-primary" role="alert">
    <h4 class="alert-heading"><%= user.uITextElementsMap.try_to_translate%></h4>
</div>

<div class="card">

    <div class="card-body">

        <p><%= user.uITextElementsMap.write_answer%></p>

        <form action="/tests/example/check" method="post"  autocomplete="off">

            <div class="form-group">
                <label for="question" class="col-form-label"><%= user.uITextElementsMap.source_language%></label>
                <input type="text" readonly class="form-control biginput" id="question" name="question"
                       value="<%= question %>">
            </div>

            <div class="form-group">
                <label for="answer" class="col-form-label"><%= user.uITextElementsMap.target_language%></label>
                <input type="text" class="form-control biginput" id="answer" name="answer">
            </div>

            <input type="hidden" class="form-control" id="test_definition_id" name="test_definition_id"
                   value="<%= testDefinitionId %>">

            <button type="submit" class="btn btn-primary"><%= user.uITextElementsMap.press_key_to_continue%></button>

        </form>
    </div>
</div>
</body>
</html>
