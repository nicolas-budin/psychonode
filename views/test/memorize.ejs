<!DOCTYPE html>
<html>
<head>

    <%- include('../header'); %>

    <script type="text/javascript">
        window.onload = function () {
            window.setTimeout(function () {
                document.memorizeForm.submit();
            }, 5000);
        };
    </script>

</head>
<body>


<div class="alert alert-primary" role="alert">
    <h4 class="alert-heading"><%= user.uITextElementsMap.try_to_remember%> <%= testDefinitionIndex %></h4>
</div>

<div class="card">

    <div class="card-body">
        <form name="memorizeForm" id="memorizeForm" action="/tests/memorize" method="post">

            <div class="form-group">
                <label for="question" class="col-form-label"><%= user.uITextElementsMap.source_language%></label>
                <input type="text" readonly class="form-control biginput" id="question" name="question"
                       value="<%= question %>">
            </div>

            <div class="form-group">
                <label for="answer" class="col-form-label"><%= user.uITextElementsMap.target_language%></label>
                <input type="text" readonly class="form-control biginput" id="answer" name="answer"
                       value="<%= answer %>">
            </div>

            <input type="hidden" class="form-control" id="test_definition_index" name="test_definition_index" value="<%= testDefinitionIndex %>">
        </form>
    </div>
</div>
</body>
</html>
